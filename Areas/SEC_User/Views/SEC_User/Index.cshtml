    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

@model Metronic_8.Areas.SEC_User.Models.SEC_UserModel;

<div class="card rounded-3 w-md-550px">
    <!--begin::Card body-->
    <div class="card-body p-10 p-lg-20">
        <!--begin::Form-->
        <form class="form w-100" method="post" asp-area="SEC_User" asp-controller="SEC_User" asp-action="Login">
            <!--begin::Heading-->
            <div class="text-center">
                <!--begin::Title-->
                <h1 class="text-dark fw-bolder">AddressBook Login</h1>
                <!--end::Title-->
            </div>
            <!--begin::Heading-->
            <!--begin::Separator-->
            <div class="separator my-8 my-md-8 my-lg-8">
            </div>
            <!--end::Separator-->
            @if(TempData["InvalidCredentials"] != null)
            {
            <div class="text-danger mb-5 text-center fs-3">
                @Html.Raw(TempData["InvalidCredentials"])
            </div>
            }
            <!--begin::Input group=-->
            <div class="fv-row mb-8">
                <!--begin::User Name-->
                <input type="text" placeholder="Username" asp-for="UserName" autocomplete="off" class="form-control bg-transparent" />
                <span class="text-danger" asp-validation-for="UserName"></span>
                <!--end::User Name-->
            </div>
            <!--end::Input group=-->
            <div class="fv-row mb-3">
                <!--begin::Password-->
                <input type="password" placeholder="Password" asp-for="Password" autocomplete="off" class="form-control bg-transparent" />
                <span class="text-danger" asp-validation-for="Password"></span>

                <!--end::Password-->
            </div>
            <!--end::Input group=-->
            <!--begin::Wrapper-->
            <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
                <div></div>
                <!--begin::Link-->
                <a href="../../demo1/dist/authentication/layouts/creative/reset-password.html" class="link-primary">Forgot Password ?</a>
                <!--end::Link-->
            </div>
            <!--end::Wrapper-->
            <!--begin::Submit button-->
            <div class="d-grid mb-10">
                <button type="submit" class="btn btn-primary">
                    <!--begin::Indicator label-->
                    <span class="indicator-label">Sign In</span>
                    <!--end::Indicator label-->
                    <!--begin::Indicator progress-->
                    <span class="indicator-progress">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                    <!--end::Indicator progress-->
                </button>
            </div>
            <!--end::Submit button-->
            <!--begin::Sign up-->
            <div class="text-gray-500 text-center fw-semibold fs-6">
                Not a Member yet?
                <a class="link-primary" asp-area="SEC_User" asp-controller="SEC_User" asp-action="Signup">Sign up</a>
            </div>
            <!--end::Sign up-->
        </form>
        <!--end::Form-->
    </div>
    <!--end::Card body-->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
