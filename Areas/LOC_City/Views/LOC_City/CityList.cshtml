@{
    ViewData["Title"] = "CityList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Metronic_8.Areas.LOC_City.Models;

<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <!--begin::Toolbar container-->
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">

        <!--begin::Page title-->
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <!--begin::Title-->
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">City</h1>
            <!--end::Title-->
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    <a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--end::Item-->
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">Cities</li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end::Page title-->
        <!--begin::Actions-->
        <div class="d-flex align-items-center gap-2 gap-lg-3">
            <!--begin::Secondary button-->
            <a href="#" class="btn btn-sm fw-bold bg-body btn-color-gray-700 btn-active-color-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_create_app">Rollover</a>
            <!--end::Secondary button-->
            <!--begin::Primary button-->
            <a asp-area="LOC_City" asp-controller="LOC_City" asp-action="Add" class="btn btn-sm fw-bold btn-primary">Add City</a>
            <!--end::Primary button-->
        </div>
        <!--end::Actions-->
    </div>
    <!--end::Toolbar container-->
</div>
<!--end::Toolbar-->
<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
    <!--begin::Content container-->
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div class="card">
            <div class="card-body p-5 px-lg-10 py-lg-7">
                <!--begin::Heading-->
                <div>
                    <!--begin::Title-->
                    <span>
                        <h3 class="fs-x text-dark mb-6">
                            <svg style="position: relative;top:-3px;"
                                 xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                 fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                            </svg>
                            SEARCH
                        </h3>
                    </span>
                    <!--end::Title-->
                    <hr />
                    <div class="">
                        <partial name="_filterCity" />
                    </div>
                </div>
                <!--end::Heading-->
            </div>
        </div>

        <!--begin::Card-->
        <div class="card my-lg-10">
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
                <!--begin::Card title-->
                <div class="card-title">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative my-1">
                        <!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
                        <span class="svg-icon svg-icon-1 position-absolute ms-6">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
                                <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                        <input type="text" data-kt-customer-table-filter="search" class="form-control form-control-solid w-250px ps-15" placeholder="Search City" />
                    </div>
                    <!--end::Search-->
                </div>
                <!--begin::Card title-->
                <!--begin::Card toolbar-->
                <div class="card-toolbar">


                    <!--begin::Toolbar-->
                    <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                        <!--begin::Add customer-->
                        <a class="btn btn-primary"
                           asp-area="LOC_City" asp-controller="LOC_City" asp-action="Add"
                           data-bs-target="#kt_modal_add_customer">
                            Add City
                        </a>
                        <!--end::Add customer-->
                    </div>
                    <!--end::Toolbar-->
                    <!--begin::Group actions-->
                    <div class="d-flex justify-content-end align-items-center d-none"
                         data-kt-customer-table-toolbar="selected">
                        <div class="fw-bold me-5">
                            <span class="me-2"
                                  data-kt-customer-table-select="selected_count"></span>Selected
                        </div>
                        <button type="button" class="btn btn-danger"
                                data-kt-customer-table-select="delete_selected" id="btnDelete">
                            Delete
                            Selected
                        </button>
                    </div>
                    <!--end::Group actions-->


                </div>
                <!--end::Card toolbar-->
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-4">
                <!--begin::Table-->
                <table class="table align-middle table-row-dashed fs-6 gy-5 datatable" id="kt_customers_table">
                    <!--begin::Table head-->
                    <thead class="bg-light">
                        <!--begin::Table row-->
                        <tr class=" fw-bold fs-7 text-uppercase">
                            <th class="w-10px pe-2">
                                <div class="form-check form-check-sm form-check-custom form-check-solid me-3 px-2">
                                    <input class="form-check-input" type="checkbox" style="background-color:black;"
                                           id="SelectAll" />
                                </div>
                            </th>

                            <th class="min-w-125px text-center">Country Name</th>
                            <th class="min-w-125px text-center">State Name</th>
                            <th class="min-w-125px text-center">City Name</th>
                            <th class="min-w-125px text-center">Created</th>
                            <th class="min-w-125px text-center">Modified</th>
                            <th class="text-end min-w-70px text-center">Actions</th>
                        </tr>
                        <!--end::Table row-->
                    </thead>
                    <!--end::Table head-->
                    <!--begin::Table body-->
                    <tbody>
                        @foreach (LOC_CityModel dr in ViewBag.City)
                        {
                            <tr class="text-center">

                                <td>
                                    <div class="form-check form-check-sm form-check-custom form-check-solid px-2">
                                        <input class="form-check-input" type="checkbox" id="SelectOne" name="SelectOne" value="@dr.CityID" style="background-color:black;" />
                                    </div>
                                </td>

                                <td>
                                    @dr.CountryName
                                </td>

                                <td>
                                    @dr.StateName
                                </td>

                                 <td>
                                    @dr.CityName
                                </td>

                                <td>
                                    @(Convert.ToDateTime(dr.Created).ToString("dd-MM-yyyy"))
                                </td>

                                <td>
                                    @(Convert.ToDateTime(dr.Modified).ToString("dd-MM-yyyy"))
                                </td>

                                <td>
                                    <a class="text-decoration-none text-dark text-hover-primary"
                                       style="margin-right: 8px;" data-bs-toggle="tooltip"
                                       data-bs-placement="left" data-bs-title="Edit"
                                       asp-area="LOC_City" asp-controller="LOC_City" asp-action="Add" asp-route-CityID="@dr.CityID">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20"
                                             height="20" fill="currentColor"
                                             class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd"
                                                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </a>
                                    <a class="text-decoration-none text-dark text-hover-danger"
                                       data-bs-toggle="tooltip" data-bs-placement="right"
                                       data-bs-title="Delete"
                                       asp-area="LOC_City" asp-controller="LOC_City" asp-action="Delete" asp-route-CityID="@dr.CityID" onclick="return confirm('Are You sure delete it!!!')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20"
                                             height="20" fill="currentColor" class="bi bi-trash3"
                                             viewBox="0 0 16 16">
                                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                                        </svg>
                                    </a>
                                </td>
                                <!--end::Action=-->
                            </tr>
                        }
                    </tbody>
                    <!--end::Table body-->
                </table>
                <!--end::Table-->
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Content container-->
</div>
<!--end::Content-->
@section scripts{


    <!--begin::Javascript-->
    <script>var hostUrl = "assets/";</script>
    <!--begin::Global Javascript Bundle(used by all pages)-->
    <script src="~/dist/assets/plugins/global/plugins.bundle.js"></script>
    <script src="~/dist/assets/js/scripts.bundle.js"></script>
    <!--end::Global Javascript Bundle-->
    <!--begin::Vendors Javascript(used by this page)-->
    <script src="~/dist/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <!--end::Vendors Javascript-->
    <!--begin::Custom Javascript(used by this page)-->
    <script src="~/dist/assets/js/custom/apps/ecommerce/customers/listing/listing.js"></script>
    <script src="~/dist/assets/js/custom/apps/ecommerce/customers/listing/add.js"></script>
    <script src="~/dist/assets/js/custom/apps/ecommerce/customers/listing/export.js"></script>
    <script src="~/dist/assets/js/widgets.bundle.js"></script>
    <script src="~/dist/assets/js/custom/widgets.js"></script>
