    <script src="~/dist/assets/js/custom/utilities/modals/create-app.js"></script>
    <script src="~/dist/assets/js/custom/utilities/modals/users-search.js"></script>
    <!--end::Custom Javascript-->
    <!--end::Javascript-->
    @*<---------- select all check box script start ---------->*@
    <script>
        $('#SelectAll').on('click', function () {
            let checkboxes = document.getElementsByTagName('input');
            let val = null;
            for (var i = 0; i < checkboxes.length; i++) {
                if (checkboxes[i].type === 'checkbox') {
                    if (val == null) {
                        val = checkboxes[i].checked;
                    }
                    else {
                        checkboxes[i].checked = val;
                    }
                }
            }
        });
    </script>
    @*<---------- select all check box script end ---------->*@

    @*<---------- tack selected checkbox values script starts ---------->*@
    <script>
        $('#btnDelete').on('click', function () {
            debugger;
            let val = [];
            console.log(val);
            $("input[name='SelectOne']:checked").each(function () {
                val.push($(this).val());
            });

            $.ajax({
                type: 'POST',
                url: '/LOC_City/DeleteMultiple',
                data: { 'Ids': val },
                success: function (response) {
                    if (response == 'success') {
                        location.reload();
                    }
                },
                error: function () {

                }
            })
        });
    </script>
    @*<---------- tack selected checkbox values script end ---------->*@
}
