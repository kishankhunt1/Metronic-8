@model Metronic_8.Areas.LOC_City.Models.LOC_CityModel;

<form method="post">
	<div class="d-flex row">

		<!--begin::Input group-->
		<div class="row  mb-8">
			<!--begin::Col-->
			<div class="col-md-4 fv-row">
				<select class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select a Country" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
					<option value="">Select Country</option>
				</select>
			</div>
			<!--end::Col-->

			<!--begin::Col-->
			<div class="col-md-4 fv-row">
				<select class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select a State" asp-for="StateID" asp-items="@(new SelectList(ViewBag.StateList,"StateID","StateName"))">
					<option value="">Select Country</option>
				</select>
			</div>
			<!--end::Col-->

			<!--begin::Col-->
			<div class="col-md-4 fv-row">
				<!--begin::Input-->
				<input type="search" class="form-control form-control-solid"
					   name="CityName"
					   asp-for="CityName" placeholder="Enter City Name"
					   autocomplete="off" />
				<!--end::Input-->
			</div>
			<!--end::Col-->
		</div>
		<!--end::Input group-->

		<div class="col-lg-4">
			<button type="submit" class="btn btn-primary"
					style="margin-right:15px;" asp-area="LOC_City" asp-controller="LOC_City" asp-action="Index">
				<span class="indicator-label">Search</span>
			</button>
			<a type="submit" class="btn btn-light me-3"
			   asp-area="LOC_City" asp-controller="LOC_City" asp-action="Clear">
				Clear
			</a>
		</div>
	</div>
</form>